  if(onOffSwitchState == HIGH){
    motorEnabled = !motorEnabled;
  }

  if(directionSwitchState !=
  previousDirectionSwitchState) {
  if(directionSwitchState == HIGH)  {
  motorDirection =!motorDirecion;
  }
 }
